{
  "name": "electron-react-parcel-boilerplate",
  "version": "0.0.3",
  "description": "A boilerplate for Electron + React + Parcel.",
  "main": "app/main/main.js",
  "scripts": {
    "start": "concurrently --kill-others \"yarn parcel\" \"yarn electron\"",
    "dist": "yarn parcel:build && build --dir --x64 --publish=never",
    "electron": "electron .",
    "parcel": "parcel app/renderer/index.html -p 1124 -d app/renderer/.parcel/development",
    "parcel:build": "parcel build app/renderer/index.html --public-url ../ -d app/renderer/.parcel/production",
    "test": "yarn test:renderer && yarn test:main",
    "test:u": "yarn test:renderer -u && yarn test:main",
    "test:coverage": "yarn test:renderer --coverage",
    "test:main": "yarn parcel:build && jest app/main",
    "test:renderer": "jest app/renderer",
    "lint": "eslint app",
    "lint:fix": "yarn lint --fix"
  },
  "author": "shamofu",
  "license": "MIT",
  "build": {
    "files": [
      "app/**",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/.parcel/production/**"
    ]
  },
  "jest": {
    "verbose": true,
    "setupTestFrameworkScriptFile": "<rootDir>/setuptests.js",
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/index.js",
      "!app/renderer/tests/**",
      "!app/renderer/.parcel/**"
    ],
    "coverageDirectory": ".coverage"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "electron": "^1.7.10",
    "electron-builder": "^19.49.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.14.0",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^22.0.4",
    "parcel-bundler": "^1.3.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "spectron": "^3.7.2"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "electron-is-dev": "^0.3.0"
  }
}
