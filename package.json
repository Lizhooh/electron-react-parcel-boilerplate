{
  "name": "electron-react-parcel-boilerplate",
  "version": "0.1.2",
  "description": "A boilerplate for Electron + React + Parcel.",
  "main": "app/main/main.ts",
  "scripts": {
    "start": "concurrently --kill-others \"yarn parcel\" \"yarn electron\"",
    "dist": "yarn parcel:build && build --dir --x64 --publish=never",
    "electron": "electron .",
    "parcel": "parcel app/renderer/index.html -p 1124 -d app/renderer/.parcel/development",
    "parcel:build": "parcel build app/renderer/index.html --public-url ./ -d app/renderer/.parcel/production --target=electron",
    "test": "yarn parcel:build && jest",
    "lint": "eslint 'app/**/*.js{,x}' && tslint 'app/**/*.ts{,x}'",
    "lint:fix": "eslint 'app/**/*.js{,x}' --fix && tslint 'app/**/*.ts{,x}' --fix"
  },
  "author": "shamofu",
  "license": "MIT",
  "build": {
    "files": [
      "app/**",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/.parcel/production/**"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/index.tsx",
      "!app/renderer/tests/**",
      "!app/renderer/.parcel/**"
    ],
    "coverageDirectory": ".coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "globals": { "ts-jest": { "useBabelrc": true } }
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "electron": "^1.8.2",
    "electron-builder": "^20.2.0",
    "eslint": "^4.18.1",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.2",
    "parcel-bundler": "^1.6.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "spectron": "^3.8.0",
    "ts-jest": "^22.4.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "electron-is-dev": "^0.3.0"
  }
}
